@using HealthSupportApp.Models.MedicalModel
@{
    ViewBag.Title = "Doctors";
    Layout = "~/Views/Shared/_MainAdminLayout.cshtml";
    List<Doctors> doctors = ViewBag.GetAllDoctors;
}
<link href="~/Content/Layout/DataTables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<div class="container-fluid">
    <header>
        <h1 class="h3 display">Doctors</h1>
    </header>
    @if (ViewBag.Message != null)
    {
        <div class="container">
            <div class="row justify-content-center align-content-center">
                <div class="col-md-8">
                    <div class="alert alert-success">
                        <strong>Success!</strong> @ViewBag.Message
                    </div>
                </div>
            </div>
        </div>
    }
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="container">
            <div class="row justify-content-center align-content-center">
                <div class="col-md-8">
                    <div class="alert alert-danger">
                        <strong>Oops!</strong> @ViewBag.ErrorMessage
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>List of Doctors</h4>
                </div>
                <div class="card-body" style="padding: 10px">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered" id="userDataTable">
                            <thead>
                                <tr>
                                    <th>SL.</th>
                                    <th>Doctor Name</th>
                                    <th>BMDC Reg.</th>
                                    <th>Title</th>
                                    <th>Speciality</th>
                                    <th>Mobile No.</th>
                                    <th>Email</th>
                                    <th>Account Created</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int i = 0; }
                                @if (doctors.Count > 0)
                                {
                                    foreach (Doctors doctor in doctors)
                                    {
                                        i++;
                                        <tr>
                                            <td>@i</td>
                                            <td>@doctor.Name</td>
                                            <td>@doctor.BmdcReg</td>
                                            <td>@doctor.Title</td>
                                            <td>@doctor.Speciality </td>
                                            <td>@doctor.MobileNo</td>
                                            <td>@doctor.Email</td>
                                            <td>@doctor.AccountCreatedDate</td>
                                            @if (doctor.Status == "Active")
                                            {
                                                <td>
                                                    <label class="text-success">Active</label>
                                                </td>
                                                <td>
                                                    <a class="btn btn-sm btn-secondary dropdown-toggle" href="#" role="link" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="font-size: 15px; color: white">
                                                        Action
                                                    </a>
                                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                                        @Html.ActionLink("Delete", "DeleteDoctor", "MainAdmin", new { doctorId = doctor.Id }, htmlAttributes: new { @class = "dropdown-item text-danger" })
                                                        <div class="dropdown-divider"></div>
                                                        @Html.ActionLink("Suspend", "SuspendDoctor", "MainAdmin", new { doctorId = doctor.Id }, htmlAttributes: new { @class = "dropdown-item text-warning" })
                                                    </div>
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <label class="text-danger">Suspend</label>
                                                </td>
                                                <td>
                                                    <a class="btn btn-sm btn-secondary dropdown-toggle" href="#" role="link" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="font-size: 15px; color: white">
                                                        Action
                                                    </a>
                                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                                        @Html.ActionLink("Active", "ActiveDoctor", "MainAdmin", new { doctorId = doctor.Id }, htmlAttributes: new { @class = "dropdown-item text-success" })
                                                        <div class="dropdown-divider"></div>
                                                        @Html.ActionLink("Delete", "DeleteDoctor", "MainAdmin", new { doctorId = doctor.Id }, htmlAttributes: new { @class = "dropdown-item text-danger" })
                                                    </div>
                                                </td>
                                            }
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="10">There is no data found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
</div>

@section scripts{
    <script src="~/Content/Layout/DataTables/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/Layout/DataTables/js/dataTables.bootstrap4.min.js"></script>
    @*<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>*@
    <script>
        $(document).ready(function () {
            $('#userDataTable').DataTable();
        });
        $(document).ready(function () {
            $('#doctorDataTable').DataTable();
        });
    </script>
}